--- 
import { FileText, Github, Linkedin, Mail } from 'lucide-react';
import '../tailwind.css';

interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<meta name="description" content="About Rafael Pignataro">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;500;600;700;800;900&family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
		<title>{title}</title>
    <meta name="description" content="Meet Rafael Pignataro | Fullstack Web Developer">
	</head>
	<body class="dark overflow-x-hidden">
    <header>
      <div class="container max-w-4xl mx-auto flex items-center justify-between py-4 mt-20">
        <a href="/" class="">
          <h1 class="text-2xl font-semibold leading-tight hover:underline">Rafael Pignataro</h1>
        </a>
        <div class="flex items-center gap-5">
          <a href="https://github.com/rafapignataro" target="_blank" class="py-4 hover:scale-110 transition-all duration-250" title="Github">
            <Github />
          </a>
          <a href="https://www.linkedin.com/in/rafael-pignataro" target="_blank" class="py-4 hover:scale-110 transition-all duration-250" title="Linkedin">
            <Linkedin />
          </a>
          <a href="mailto:rafapignataro@gmail.com" class="py-4 hover:scale-110 transition-all duration-250" title="E-mail">
            <Mail />
          </a>
          <a href="https://rafapignataro.notion.site/Rafael-Mira-Pignataro-d9bc9fd56f0444ce811a54e81e35109d" target="_blank" class="py-4 hover:scale-110 transition-all duration-250" title="Resume">
            <FileText />
          </a>
        </div>
      </div>
    </header>
    <main class="container max-w-4xl mx-auto ">
      <slot />
    </main>
    <footer>
      <div class="flex items-center text-center flex-col gap-5 mt-20 pb-20">
        <div class="flex flex-col itesm-center gap-2 w-[80%] md:w-full">
          <h2 class="text-3xl font-semibold">
            Contact me
          </h2>
          <h3 class="text-muted-foreground">
            If you want to talk or get a project off the ground, feel free to get in touch.
          </h3>
        </div>
        <div class="flex items-center gap-5 flex-1">
          <a href="https://github.com/rafapignataro" target="_blank" class="py-4 hover:scale-110 transition-all duration-250" title="Github">
            <Github />
          </a>
          <a href="https://www.linkedin.com/in/rafael-pignataro" target="_blank" class="py-4 hover:scale-110 transition-all duration-250" title="Linkedin">
            <Linkedin />
          </a>
          <a href="mailto:rafapignataro@gmail.com" class="py-4 hover:scale-110 transition-all duration-250" title="E-mail">
            <Mail />
          </a>
          <a href="https://rafapignataro.notion.site/Rafael-Mira-Pignataro-d9bc9fd56f0444ce811a54e81e35109d" target="_blank" class="py-4 hover:scale-110 transition-all duration-250" title="Resume">
            <FileText />
          </a>
        </div>
      </div>
    </footer>
	</body>
</html>
